extends layout

block title
    h1(class="pageTitle") Edit Song
block content
    p= song.title 
    .voteWrap
        form(action="edit-song/upVote" method="post") 
            input(type="submit" value="Up vote")
        form(action="edit-song/downVote" method="post")
            input(type="submit" value="Down vote")

block navBottom
    .songActionWrap
        form(action=`playlist/edit-song/skip/${song.id}` method="get")
            input(type="submit" value="Skip")
        form(action=`/playlist/edit-song/delete/${song.id}` method="post")
            input(type="submit" value="Delete")
    a(href="/playlist") Cancel
