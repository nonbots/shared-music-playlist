extends layout
block title
    h1(class="pageTitle") Playlist 
block navTop 
    .navTopChild
        p= userLogin.userName
        a(class="navLink" href="users-roster") Users
    form(class="buttonForm" action="/playlist/sign-out" method="post")
        input(type="submit" value="Sign out")
block content
    .content
        #player
        .playListWrap
            each song in playlist
                a(href=`/playlist/edit-song/${song.id}`) 
                    .songCard
                        input(type="hidden" id="videoId" value=`${videoId}`)
                        input(type="hidden" id="videoIds" value=`${videoIds}`)
                        p Title: #{song.title}   
                        .songInfo
                            p Requested by: #{song.requestedBy}
                            p Rating: #{song.likeRating} 
block navBottom
    form(class="buttonForm" action="/playlist/add" method="get")
        input(type="submit" value="Add")

